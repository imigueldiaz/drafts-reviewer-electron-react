{
    "name": "drafts-reviewer-electron-react",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "author": "Ignacio de Miguel Diaz",
    "description": "An Electron + React tool for authors to review their drafts",
    "homepage": "./",
    "license": "GPL-3.0-or-later",
    "email": "imigueldiaz@gmail.com",
    "url": "https://linktr.ee/imigueldiaz",
    "keywords": [
        "writer",
        "draft",
        "revision",
        "novel",
        "story",
        "short- story"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/imigueldiaz/drafts-reviewer-electron-react"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "cross-env": "^7.0.3",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.3.2",
        "i18next": "^20.1.0",
        "i18next-browser-languagedetector": "^6.1.0",
        "i18next-http-backend": "^1.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "^11.8.12",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "sass-node": "^4.11.2",
        "typescript": "^4.1.2",
        "update-electron-app": "^2.0.1",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-build": "electron-builder",
        "release": "yarn react-build && electron-builder --publish=always",
        "build": "yarn react-build && yarn electron-build",
        "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
        "stop": "taskkill -F -IM node.exe"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "prettier"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^4.0.0",
        "babel-eslint": "^10.0.0",
        "concurrently": "^6.0.0",
        "electron": "^13.6.6",
        "electron-builder": "^22.10.5",
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^24.3.2",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^4.0.8",
        "jsdoc": "^3.6.6",
        "mammoth": "^1.4.16",
        "mark.js": "^8.11.1",
        "prettier": "^2.2.1",
        "wait-on": "^5.3.0"
    },
    "build": {
        "appId": "com.example.electron-cra",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}
